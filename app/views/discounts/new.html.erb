
<h3><%= "Create New Discount for #{@merchant.name}: (aka. merchant ##{@merchant.id})" %> </h3><br/>

<%= form_with url:"/merchant/#{@merchant.id}/discounts", method: :post, local: true do |f| %>
  <%= f.label 'threshold' %>
  <%= f.number_field :threshold  %><br/><br/>

  <%= f.label 'percentage' %>
  <%= f.number_field :percentage, step: 0.01 %><br/><br/>

  <%= f.submit 'Submit' %>
<% end %>
