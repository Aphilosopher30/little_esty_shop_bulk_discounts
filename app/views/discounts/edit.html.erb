<h3>Edit discount</h3><br/>
<%= form_with url:"/merchant/#{@merchant.id}/discounts/#{@discount.id}", method: :patch, local: true do |f| %>
  <%= f.label 'Threshold' %>
  <%= f.number_field :threshold , value: @discount.threshold  %><br/><br/>

  <%= f.label 'Percentage' %>
  <%= f.number_field :percentage, step: 0.01, value: @discount.percentage %><br/><br/>

  <%= f.submit 'Submit Edit' %>
<% end %>
